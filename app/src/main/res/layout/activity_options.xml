<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPTIONS"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_margin="8dp"
        android:textAllCaps="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Categories:"
        android:textSize="16dp"
        android:padding="10dp"/>

    <CheckBox
        android:id="@+id/all_checkb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All categories"
        android:padding="10dp"
        android:layout_margin="8dp"
        android:checked="true"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <CheckBox
            android:id="@+id/art_checkb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Art"
            android:padding="10dp"
            android:checked="true"/>

        <CheckBox
            android:id="@+id/science_checkb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Science"
            android:padding="10dp"
            android:checked="true"/>

        <CheckBox
            android:id="@+id/history_checkb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:padding="10dp"
            android:checked="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <CheckBox
            android:id="@+id/literature_checkb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Literature"
            android:padding="10dp"
            android:checked="true"/>

        <CheckBox
            android:id="@+id/movies_checkb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movies"
            android:padding="10dp"
            android:checked="true"/>

        <CheckBox
            android:id="@+id/geography_checkb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geography"
            android:padding="10dp"
            android:checked="true"/>

    </LinearLayout>

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. of questions:"
        android:textStyle="bold"
        android:textSize="16dp"
        android:padding="10dp"/>

    <Spinner
        android:id="@+id/qnumber_spinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_margin="8dp">

        <RadioGroup
            android:id="@+id/levels_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="202dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Question Level:"
                android:textSize="16dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/easy_radiob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:padding="8dp"
                android:text="Easy" />

            <RadioButton
                android:id="@+id/medium_radiob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Medium" />

            <RadioButton
                android:id="@+id/hard_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Hard" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_margin="8dp">

        <Switch
            android:id="@+id/hint_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hints:   "
            android:textSize="16dp"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. of hints:"
            android:textStyle="bold"
            android:textSize="16dp"
            android:padding="10dp"/>

        <Spinner
            android:id="@+id/hnumber_spinner"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="8dp">

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:padding="10dp"
            android:textSize="16dp"/>
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:padding="10dp"
            android:textSize="16dp"/>
    </LinearLayout>

</LinearLayout>